public class VowelCount 
{
public static void main(String[] args) 
{
        String line = "Saveetha Univercity";
        int count = 0;
        for (int i = 0; i < line.length(); i++) {
            char c = line.charAt(i);
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
                c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U') {
                count++;
            }
        }
        System.out.println("Number of vowels: " + count);
    }
}
