public class Pattern2 {
    public static void main(String[] args) {
        int num = 1;
        int maxNum = 3;
        for (int i = 1; i <= maxNum; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(num);
            }
            System.out.println();
        }
        for (int i = maxNum - 1; i >= 1; i--) {
            for (int j = 1; j <= i; j++) {
                System.out.print(num);
            }
            System.out.println();
        }
    }
}
